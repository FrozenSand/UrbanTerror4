#include "ui/menudef.h"
{

	/*	INGAME PLAYER MENU
	Revised by woekele, for 4.0. Slight adjustments, nothing big.
	*/

	\\ INGAME_JOIN MENU \\

	menuDef {
		name "ingame_player"
		visible 1
		fullScreen 0
		rect 62 50 200 256	//x y z t      x=indentl  y=down z=width of box  t=height
		focusColor 1 1 1 1

		itemdef {
			name background
			rect 0 16 148 160
			style WINDOW_STYLE_SHADER
			background "ui/assets/ingame_bg_options_tr.tga"
			border 1
			bordercolor .5 .5 .5 1
			visible 1
			decoration
		}
		
		// INSTAGIB CATCHER
		itemDef {
			name gear
			rect -2 -2 644 484
			style WINDOW_STYLE_FILLED
			type 1
			forecolor 1 1 1 0
			backcolor 0 0 0 0
			border 0
			bordercolor .5 .5 .5 1
			visible 1
			action { hide gear; show gear_instagib }
			OnFocus { hide gear; show gear_instagib }
			cvarTest "g_instagib"
			hideCvar { "0" }
		}
		

		//  BUTTONS	//

		itemDef {
			name team
			type 1
			style 1
			rect 10 26 128 20
			forecolor 1 1 1 1
			border 1
			bordercolor .5 .5 .5 1
			backcolor 0 0 0 .7
			visible 1
			action { play "sound/misc/kcaction.wav" ; open ingame_ut_select_team ; close ingame ; close ingame_player }
			mouseEnter { setcolor backcolor 0 0 .55 1 }
			mouseExit { setcolor backcolor 0 0 0 .7 }
		}

		itemDef {
			name gear
			type 1
			style 1
			rect 10 56 128 20
			forecolor  1 1 1 1
			border 1
			bordercolor .5 .5 .5 1
			backcolor 0 0 0 .7
			visible 1
			action { play "sound/misc/kcaction.wav" ; open ingame_ut_select_gear ; close ingame ; close ingame_player }
			mouseEnter { setcolor backcolor 0 0 .55 1 }
			mouseExit { setcolor backcolor 0 0 0 .7}
			cvarTest "g_gametype"
			hideCvar { "11" }
		}
		
		itemDef {
			name gear_instagib
			type 1
			style 1
			rect 10 56 128 20
			forecolor  1 1 1 1
			border 1
			bordercolor .5 .5 .5 1
			backcolor 0 0 0 .7
			visible 0
			ownerdrawParam	GEAR_ITEM_1
