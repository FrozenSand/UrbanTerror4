			mouseEnter { setcolor backcolor 0 0 .55 1 }
			mouseExit { setcolor backcolor 0 0 0 .7}
		}
		

		itemDef {
			name player
			type 1
			style 1
			rect 10 86 128 20
			forecolor 1 1 1 1
